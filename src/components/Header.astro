---
import Bird from "./icons/Bird";
import GitHub from "./icons/GitHub";

import ThemeSwitch from "./ThemeSwitch";
---

<header class="w-full py-4">
  <nav class="flex items-center py-2">
    <div class="flex items-center justify-start gap-x-6">
      <a href="/" class="group">
        <h2 class="text-lg text-gray-600 dark:text-gray-100"><Bird />MJ</h2>
      </a>
      <a
        href="/projects"
        class="text-gray-500 dark:text-gray-400 hover:text-gray-400 dark:hover:text-gray-300"
        >Projects</a
      >
      <a
        href="https://github.com/mikkoaukusti/blog"
        class="group inline-flex text-gray-500 dark:text-gray-400 hover:text-gray-400 dark:hover:text-gray-300"
        target="_blank"
        rel="noopener noreferrer"
      >
        <GitHub />
        Source
      </a>
    </div>
    <div class="flex-1"></div>
    <ThemeSwitch client:visible />
  </nav>
</header>
