---
import Bird from "./icons/Bird";
import GitHub from "./icons/GitHub";
import ThemeSwitch from "./ThemeSwitch";
---

<header class="w-full py-4 border border-blue-500">
  <nav class="flex items-center py-2 border border-yellow-500">
    <div class="flex items-center justify-start gap-x-6 border border-red-500">
      <a href="/" class="group">
        <h2 class="text-lg font-bold"><Bird />MJ</h2>
      </a>
      <a href="/projects" class="hover:text-gray-500">Projects</a>
      <a
        href="https://github.com/mikkoaukusti/blog"
        class="group inline-flex hover:text-gray-500"
        target="_blank"
        rel="noopener noreferrer"
      >
        <GitHub />
        Source
      </a>
    </div>
    <div class="flex-1"></div>
    <ThemeSwitch client:visible />
  </nav>
</header>
